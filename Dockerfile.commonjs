FROM node:20-alpine as builder

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install

# Copy all files
COPY . .

# Install client dependencies and build
WORKDIR /app/client
RUN npm install
RUN npm run build

# Return to main directory
WORKDIR /app

# Production environment
FROM node:20-alpine

WORKDIR /app

# Copy built client files and CommonJS server
COPY --from=builder /app/client/dist ./client/dist
COPY --from=builder /app/server/production-server.js ./server/

# Install only production Express dependencies
RUN npm install express

# Expose port
EXPOSE 5000

# Environment variables
ENV NODE_ENV=production
ENV PORT=5000

# Use the production-server.js which is written in CommonJS style
CMD ["node", "server/production-server.js"]